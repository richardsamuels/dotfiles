[core]
	excludesfile = ~/dotfiles/git/gitignore
	editor = vim
[user]
	name = Richard Samuels
	email = richard.l.samuels@gmail.com
[push]
	default = simple
[merge]
	tool = vimdiff
[diff]
	tool = vimdiff
[difftool]
        prompt = false
[include]
    path = ~/dotfiles/local/git/gitconfig
[diff]
	tool = gvimdiff
	algorithm = patience
[merge]
	tool = gvimdiff
        conflictstyle = diff3
[difftool]
	prompt = false
[mergetool]
	keepBackup = false
[alias]
	d = difftool
        co = checkout
        m = mergetool
        s = status
        c = commit
        a = add
