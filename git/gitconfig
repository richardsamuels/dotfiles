[core]
	excludesfile = ~/dotfiles/git/gitignore
	editor = nvim
[user]
	name = Richard Samuels
	email = richard.l.samuels@gmail.com
[push]
	default = simple
[merge]
	tool = nvimdiff
[diff]
	tool = nvimdiff

[difftool "nvimdiff"]
cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""

[difftool]
        prompt = false
[include]
    path = ~/dotfiles/local/git/gitconfig
[diff]
	algorithm = patience
[merge]
        conflictstyle = diff3
[mergetool]
	keepBackup = false
[alias]
	d = difftool
        co = checkout
        m = mergetool
        s = status
        c = commit
        a = add
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[url "git@github.com:"]
  insteadOf = https://github.com/

