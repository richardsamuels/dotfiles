" -----------------------------------------------------------------------------
" 28.3 Startify
" -----------------------------------------------------------------------------

let g:startify_bookmarks = [ '~/dotfiles/vim/vimrc', '~/dotfiles/zsh/zshrc', '~/dotfiles/zsh/zshenv', '~/dotfiles/zsh/MyAntigen.hs', '~/dotfiles/tmux/tmux.conf']

function s:center_header(lines) abort
    let longest_line   = max(map(copy(a:lines), 'len(v:val)'))
    let centered_lines = map(copy(a:lines), 'repeat(" ", (&columns / 2) - (longest_line / 2)) . v:val')
    return centered_lines
endfunction

let g:startify_custom_header = s:center_header(split(system('shuf -n 1 ~/dotfiles/vim/cow | cowthink'), '\n'))

